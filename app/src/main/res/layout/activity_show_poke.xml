<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.pokes.presentation.ShowPokeActivity">

    <TextView
        android:id="@+id/textViewHeightPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HeightPlace"
        android:textSize="20sp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="100dp" />
    <TextView
        android:id="@+id/textViewHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HeightPlace"
        android:textSize="20sp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/textViewHeightPlace"/>

    <TextView
        android:id="@+id/textViewWeightPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/WeightPlace"
        android:textSize="20sp"
        android:layout_below="@+id/textViewHeightPlace"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/textViewWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/WeightPlace"
        android:textSize="20sp"
        android:layout_below="@+id/textViewHeightPlace"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textViewWeightPlace"/>

    <TextView
        android:id="@+id/textViewTypePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TypePlace"
        android:textSize="20sp"
        android:layout_below="@+id/textViewWeightPlace"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/textViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TypePlace"
        android:textSize="20sp"
        android:layout_below="@+id/textViewWeightPlace"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textViewTypePlace"/>

    <TextView
        android:id="@+id/textViewAttackPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AttackPlace"
        android:textSize="20sp"
        android:layout_below="@+id/textViewTypePlace"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/textViewAttack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AttackPlace"
        android:textSize="20sp"
        android:layout_below="@+id/textViewTypePlace"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textViewAttackPlace"/>

    <TextView
        android:id="@+id/textViewDefencePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DefencePlace"
        android:textSize="20sp"
        android:layout_below="@+id/textViewAttackPlace"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/textViewDefence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DefencePlace"
        android:textSize="20sp"
        android:layout_below="@+id/textViewAttackPlace"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textViewDefencePlace"/>

    <TextView
        android:id="@+id/textViewHpPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HpPlace"
        android:textSize="20sp"
        android:layout_below="@+id/textViewDefencePlace"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/textViewHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HpPlace"
        android:textSize="20sp"
        android:layout_below="@+id/textViewDefencePlace"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textViewHpPlace"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="150dp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_android_black_96dp"
        />


</RelativeLayout>